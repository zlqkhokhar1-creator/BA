{\n  "$schema": "https://turbo.build/schema.json",\n  "globalDependencies": ["**/.env.*local"],\n  "pipeline": {\n    "build": {\n      "dependsOn": ["^build"],\n      "outputs": [".next/**", "!.next/cache/**", "dist/**"]\n    },\n    "dev": {\n      "cache": false,\n      "persistent": true\n    },\n    "test": {\n      "dependsOn": ["build"],\n      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]\n    },\n    "lint": {\n      "dependsOn": ["^lint"]\n    },\n    "type-check": {\n      "dependsOn": ["^type-check"]\n    },\n    "clean": {\n      "cache": false\n    }\n  }\n}